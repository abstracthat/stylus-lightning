// Browser Reset
// This is on top of normalize.css to give a nicer baseline for new styles.

// Improved typography, scrolling, and border box everything.
// overflow-x hidden for full-width() mixin
html
  height 100%
  overflow-x hidden
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-tap-highlight-color transparent
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

body
  height 100%
  overflow-x hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch

h1,
h2,
h3,
h4,
h5,
h6
  text-rendering optimizeLegibility

// Reset padding and margin on commonly styled elements
h1,
h2,
h3,
h4,
h5,
h6,
p,
ul,
ol,
figure,
button
  margin 0
  padding 0

// Unstyled links
a
  font inherit
  color inherit
  text-decoration none
  color inherit

  &:focus
    outline 0

// Unstyled buttons: no outlines, backgrounds or borders
button
  border 0
  letter-spacing inherit
  background none
  -webkit-font-smoothing inherit

  &:focus
    outline 0

// Unstyled hr
hr
  border none
  margin 0
  height 0

// fluid width responsive media
img,
video,
audio,
iframe,
embed,
object
  max-width 100%
  height auto
  border 0
  -ms-interpolation-mode bicubic
  display block
